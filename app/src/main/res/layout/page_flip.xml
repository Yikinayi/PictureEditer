<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:fitsSystemWindows="true"
    android:orientation="vertical">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="14dp"
            android:src="@drawable/arrow_back"
            app:tint="#ffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="50dp"
            android:text="翻转"
            android:textColor="#ffffff"
            android:textSize="17dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/bgButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:padding="13dp"
            android:src="@drawable/ic_clothes"
            app:tint="#ffffff" />

        <ImageView
            android:id="@+id/cacheButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:layout_marginRight="50dp"
            android:alpha="0.85"
            android:padding="14dp"
            android:src="@drawable/ic_cache"
            app:tint="#ffffff" />

    </FrameLayout>


    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:background="#44ffffff"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/flip1Layout"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_flip_origin" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 原图"
                android:textColor="#ffffff"
                android:textSize="14dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/flip2Layout"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_flip_left_right" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 左右翻转"
                android:textColor="#ffffff"
                android:textSize="14dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/flip3Layout"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:rotation="90"
                android:src="@drawable/ic_flip_left_right" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 上下翻转"
                android:textColor="#ffffff"
                android:textSize="14dp" />

        </LinearLayout>

    </LinearLayout>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/confirm"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:src="@drawable/confirm_right"
        app:backgroundTint="#ffffff"
        app:elevation="8dp"
        app:fabCustomSize="72dp" />

</LinearLayout>