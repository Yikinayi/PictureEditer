<resources>


    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorStyle</item>
        <item name="colorPrimaryDark">@color/colorStyle</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="PermissionBlankActivity" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>


    <style name="MainActivityStyle" parent="AppTheme">
        <item name="background">@drawable/bg_main_activity</item>
    </style>

</resources>